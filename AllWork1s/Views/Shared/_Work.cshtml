@using AllWork1s.Models;
@model List<Work>
@{ 
    User user = (User)Session["user"];
}
<div id="divLoadding" style="display: none">
    @for (var i = 0; i < 10; i++)
    {
        <div class="col-lg-12" style="margin-top: 1px;">
            <div class="card" style="padding: 10px; border-radius: 0px 0px 0px 0px;">
                <div class="ui divided items w-100">
                    <div class="item">
                        <div class="image">
                            <div class="ui two column grid">
                                <div class="column w-100">
                                    <div class="ui fluid image">
                                        <a class="ui left corner label text-danger">
                                            <i class="heart icon"></i>
                                        </a>
                                        <div class="ui placeholder">
                                            <div class="image"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="content" style="font-size: 10px">
                            <div class="ui placeholder">
                                <div class="full line"></div>
                                <div class="very long line"></div>
                                <div class="long line"></div>
                                <div class="medium line"></div>
                                <div class="short line"></div>
                                <div class="very short line"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@foreach (var item in Model)
{
    <div class="col-lg-12 mt-3">
        <div class="card-media">
            <!-- media container -->
            <div class="card-media-object-container" style=" width: 19%; ">
                <div class="card-media-object" style="background-image: url('../../Images/Employer/@item.Employer.employer_logo');background-repeat:no-repeat; background-size: 100% 100%;">
                    <a class="ui red tag label float-right mt-2" style="margin-left: -5px">HOT</a>
                </div>
            </div>
            <!-- body container -->
            <div class="card-media-body">
                <div class="card-media-body-top">
                    <span class="subtle">Công ty: @item.Employer.employer_company</span>
                    <div class="card-media-body-top-icons u-float-right">
                        <svg fill="#888888" height="16" viewBox="0 0 24 24" width="16" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0 0h24v24H0z" fill="none" />
                            <path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z" />
                        </svg>
                        <svg fill="#888888" height="16" viewBox="0 0 24 24" width="16" xmlns="http://www.w3.org/2000/svg">
                            <path d="M17 3H7c-1.1 0-1.99.9-1.99 2L5 21l7-3 7 3V5c0-1.1-.9-2-2-2z" />
                            <path d="M0 0h24v24H0z" fill="none" />
                        </svg>
                    </div>
                </div>
                <span class="card-media-body-heading font-weight-bold">@(item.work_name.Length < 90 ? item.work_name : item.work_name.Substring(0, 90) + "...")</span>
                <div class="card-media-body-supporting-bottom">
                    <span class="card-media-body-supporting-bottom-text subtle"><i class="fa fa-map-marker">&nbsp;</i>@item.Province.province_name</span>
                    <span class="card-media-body-supporting-bottom-text subtle u-float-right">
                        @if (user != null)
                        {

                        }
                        else
                        {
                            <b class="text-warning">Đăng nhập để xem lương</b>
                        }
                    </span>
                </div>
                <div class="card-media-body-supporting-bottom card-media-body-supporting-bottom-reveal">
                    <span class="card-media-body-supporting-bottom-text subtle font-weight-bold" style="color: #7B55FF">Nghành nghề: @item.Career.career_name</span>
                    <a href="@Url.Action("DetailWork","View", new { id = item.work_id })" class="card-media-body-supporting-bottom-text card-media-link u-float-right text-red font-weight-bold">XEM VIỆC&nbsp;<i class="fas fa-angle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
}

@using AllWork1s.Models;
@model Employer
@{
    ViewBag.Title = "DetailEmployer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DataWorkEntities db = new DataWorkEntities();
}
@{ 
    List<Work> works = db.Works.Where(n => n.work_activate == true && n.work_option == true && n.Employer.employer_activate == true && n.employer_id == Model.employer_id).OrderByDescending(n => n.work_datecreated).Take(4).ToList();
}
<section class="w3l-specification-6">
    <div class="t">
        <div class="row">
            <div class="col-lg-12">
                <img src="~/Images/Employer/cover_trang_chu.jpg" class="w-100" style="height: 500px" />
            </div>
            <div class="col-lg-12">
                <center>
                    <div style="width: 300px; height: 200px; margin-top: -10%;background-color: white;" class="shadow">
                        <img src="~/Images/Employer/@Model.employer_logo" style="height: 100%; width: 100%" />
                    </div>
                    <h1  class="text-danger">@Model.employer_company</h1>
                </center>
            </div>
            <div class="container mt-4" style="max-width: 1400px">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="nav-wrapper">
                            <ul class="nav nav-pills nav-fill flex-column flex-md-row" id="tabs-icons-text" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link mb-sm-3 mb-md-0 active" id="tabs-icons-text-1-tab" data-toggle="tab" href="#tabs-icons-text-1" role="tab" aria-controls="tabs-icons-text-1" aria-selected="true"><i class="ni ni-cloud-upload-96 mr-2"></i>Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link mb-sm-3 mb-md-0" id="tabs-icons-text-2-tab" data-toggle="tab" href="#tabs-icons-text-2" role="tab" aria-controls="tabs-icons-text-2" aria-selected="false"><i class="ni ni-bell-55 mr-2"></i>Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link mb-sm-3 mb-md-0" id="tabs-icons-text-3-tab" data-toggle="tab" href="#tabs-icons-text-3" role="tab" aria-controls="tabs-icons-text-3" aria-selected="false"><i class="ni ni-calendar-grid-58 mr-2"></i>Messages</a>
                                </li>
                            </ul>
                        </div>
                        <div class="">
                            <div class="">
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="tabs-icons-text-1" role="tabpanel" aria-labelledby="tabs-icons-text-1-tab">
                                        <center class="mt-4">
                                            <h3>CÁC CÔNG VIỆC VỪA MỚI ĐĂNG TUYỂN</h3>
                                        </center>
                                        <br />
                                        <br />
                                        <div class="row">
                                            @foreach (var item in works)
                                            {
                                                <div class="col-lg-6 mt-4">
                                                    <div class="card-media" style="height: 100%">
                                                        <div class="" style="padding: 20px">
                                                            <h3>@item.work_name</h3>
                                                            <div class="row" style="color: gray">
                                                                <div class="col-lg-6">
                                                                    <div>
                                                                        <i class="fa fa-calendar">&nbsp;</i>@item.work_datecreated
                                                                    </div>
                                                                    <div class="mt-2">
                                                                        <i class="fa fa-dollar">&nbsp;</i>@item.work_pricemin - @item.work_pricemax @item.work_symbol
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-6">
                                                                    <div>
                                                                        <i class="fa fa-map-marker">&nbsp;</i>@item.Form.form_name
                                                                    </div>
                                                                    <div class="mt-2">
                                                                        <i class="fa fa-clock">&nbsp;</i>@item.Form.form_name
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <center>
                                            <button class="ui red button mt-5">Xem thêm &nbsp;<i class="fas fa-angle-right"></i></button>
                                        </center>
                                        <hr />
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <div class="card" style="padding: 20px">
                                                    <center>
                                                        <b style="font-size: 50px"><i class="fa fa-user"></i></b><br />
                                                        <div class="mt-3">QI MÔ CÔNG TY</div>
                                                        <b class="text-danger">1000+</b>
                                                    </center>
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="card" style="padding: 20px">
                                                    <center>
                                                        <b style="font-size: 50px"><i class="fa fa-user"></i></b><br />
                                                        <div class="mt-3">QI MÔ CÔNG TY</div>
                                                        <b class="text-danger">1000+</b>
                                                    </center>
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="card" style="padding: 20px">
                                                    <center>
                                                        <b style="font-size: 50px"><i class="fa fa-user"></i></b><br />
                                                        <div class="mt-3">QI MÔ CÔNG TY</div>
                                                        <b class="text-danger">1000+</b>
                                                    </center>
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="card" style="padding: 20px">
                                                    <center>
                                                        <b style="font-size: 50px"><i class="fa fa-user"></i></b><br />
                                                        <div class="mt-3">QI MÔ CÔNG TY</div>
                                                        <b class="text-danger">1000+</b>
                                                    </center>
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <h1>GIỚI THIỆU</h1>
                                        <div class="mt-3">
                                            @Html.Raw(Model.employer_introduce)
                                        </div>
                                        <hr />
                                        <h1>TẠI SAO BẠN YÊU THÍCH CÔNG TY</h1>
                                        <div class="mt-3">
                                            @Html.Raw(Model.employer_favourite)
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="tabs-icons-text-2" role="tabpanel" aria-labelledby="tabs-icons-text-2-tab">
                                        <p class="description">Cosby sweater eu banh mi, qui irure terry richardson ex squid. Aliquip placeat salvia cillum iphone. Seitan aliquip quis cardigan american apparel, butcher voluptate nisi qui.</p>
                                    </div>
                                    <div class="tab-pane fade" id="tabs-icons-text-3" role="tabpanel" aria-labelledby="tabs-icons-text-3-tab">
                                        <p class="description">Raw denim you probably haven't heard of them jean shorts Austin. Nesciunt tofu stumptown aliqua, retro synth master cleanse. Mustache cliche tempor, williamsburg carles vegan helvetica. Reprehenderit butcher retro keffiyeh dreamcatcher synth.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


                                                <h2 class="text-center">Chọn hồ sơ nộp</h2>
                                                <input type="hidden" value="@Model.work_id" name="work_id" />
                                                <hr />
                                                <div class="alert alert-warning alert-dismissible fade show" role="alert" style="background-color: #fc7c5f">
                                                    <span class="alert-inner--icon"><i class="ni ni-bell-55"></i></span>
                                                    <span class="alert-inner--text"><strong>Chào @user.user_nicename!</strong> Chọn hồ sơ để nộp cho nhà tuyển dụng @Model.Employer.employer_company!</span>
                                                </div>
                                            </div>
                                            @foreach (var item in db.Cvs.Where(n => n.cv_activate == true && n.cv_option == true && n.user_id == user.user_id).OrderByDescending(n => n.cv_datecreated).ToList())
                                            {
                                                <div class="col-lg-6 mt-3">
                                                    <div class="row no-gutters">
                                                        <div class="col-md-5">
                                                            <img src="~/Images/User/32644928_2062295167425734_7686714948314988544_o.jpg" class="card-img" alt="..." style="height: 100%">
                                                        </div>
                                                        <div class="col-md-7">
                                                            <div class="card-body">
                                                                <h5 class="card-title">@item.cv_fullname</h5>
                                                                <p class="card-text">
                                                                    <ul>
                                                                        <li><i class="fa fa-mail-bulk">&nbsp;</i>@item.cv_email</li>
                                                                        <li><i class="fas fa-university">&nbsp;</i>@item.cv_schools</li>
                                                                        <li><i class="fab fa-accusoft"></i>@item.cv_location</li>
                                                                        <li><i class="fa fa-calendar">&nbsp;</i>@item.cv_datecreated</li>
                                                                        <li><button type="button" class="btn btn-sm btn-primary btn-tooltip" data-toggle="tooltip" data-placement="top" title="Tooltip on top" data-container="body" data-animation="true">Sửa hồ sơ @id_num@item.cv_id</button></li>
                                                                    </ul>
                                                                </p>
                                                                <p class="card-text"><small class="text-muted">Mã hồ sơ: #@id_num@item.cv_id</small></p>
                                                                <div class="custom-control custom-radio">
                                                                    <input name="cv_id" class="custom-control-input" id="@radio@i" type="radio" value="@item.cv_id">
                                                                    <label class="custom-control-label" for="@radio@i">
                                                                        <span>#@id_num@item.cv_id</span>
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                i++;
                                            }
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-primary">Nộp hồ sơ</button>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                        </div>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

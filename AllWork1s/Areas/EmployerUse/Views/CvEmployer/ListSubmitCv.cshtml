                                                <div class="col-lg-6">
                                                    <div class="card blog-horizontal">
                                                        <div class="card-body">
                                                            <div class="card-img-actions mr-sm-3 mb-3">
                                                                <img src="~/Images/User/32644928_2062295167425734_7686714948314988544_o.jpg" />
                                                            </div>
                                                            <div class="mb-3">
                                                                <h5 class="d-flex font-weight-semibold flex-nowrap my-1"> <a href="#" class="text-default mr-2" data-abc="true">@item.Cv.cv_fullname</a> <span class="text-danger-400 ml-auto text-warning font-weight-bold">@(item.Work.Employer.employer_version == 1 ? "" : "HOT")</span> </h5>
                                                                <ul class="list-inline list-inline-dotted text-muted mb-0">
